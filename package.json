{
  "name": "go-group-imports",
  "displayName": "Go group imports",
  "description": "Group golang imports on save",
  "version": "0.0.1",
  "publisher": "elszon",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:go"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.goGroupImports.toggle",
        "title": "Go Group Imports toggle"
      }
    ],
    "configuration": {
      "title": "Go Group Imports",
      "properties": {
        "groupImports.onSave": {
          "type": "boolean",
          "default": true,
          "description": "Automatically group golang imports on save."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.81.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
